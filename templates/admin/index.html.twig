{# templates/admin/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Espace Administrateur{% endblock %}

{% block body %}
    {% include 'header/header.html.twig' %}

    <div class="container mt-4">
        <div class="row mb-4">
            <!-- Align the header to the left -->
            <div class="col-12">
                <h1 class="text-start" style="background: darkgreen; color: white; padding: 10px;">
                    Espace Admin
                </h1>
            </div>
        </div>

        <div class="row">
            <!-- Align list items to the right -->
            <div class="col-12 d-flex justify-content-end">
                <div class="list-group">
                    <a style="background: green; color: white; margin-bottom: 10px;" href="{{ path('app_register') }}" class="list-group-item list-group-item-action">
                        Ajouter une association
                    </a>
                    <a style="background: orange; color: white; margin-bottom: 10px;" href="{{ path('app_edit_association') }}" class="list-group-item list-group-item-action">
                        Modifier une association
                    </a>
                    <a style="background: red; color: white; margin-bottom: 10px;" href="{{ path('app_delete_association') }}" class="list-group-item list-group-item-action">
                        Supprimer une association
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
